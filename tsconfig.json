{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@routes/*": ["src/routes/*"],
      "@types/*": ["src/types/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
}
