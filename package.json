{
  "name": "doodle-frontend-challenge-chat-api",
  "version": "1.0.0",
  "private": true,
  "description": "API for the Doodle frontend challenge",
  "keywords": [
    "doodle",
    "chat-api",
    "frontend-challenge"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/doodle/frontend-challenge-chat-api.git"
  },
  "license": "PROPRIETARY",
  "author": {
    "name": "Doodle AG",
    "url": "https://doodle.com"
  },
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist && rm -rf node_modules",
    "dev": "NODE_ENV=development tsx watch src/server.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "prettier:check": "prettier --check \"src/**/*.ts\"",
    "serve": "node dist/server.js",
    "start": "node dist/server.js",
    "start:dev": "NODE_ENV=development npm run dev",
    "start:prod": "NODE_ENV=production npm run start",
    "test": "echo \"No tests specified\""
  },
  "dependencies": {
    "compression": "1.7.5",
    "cors": "2.8.5",
    "dotenv": "16.4.7",
    "express": "4.21.2",
    "helmet": "8.0.0",
    "mongoose": "8.10.0",
    "swagger-ui-express": "5.0.1",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "9.19.0",
    "@types/compression": "1.7.5",
    "@types/cors": "2.8.17",
    "@types/express": "5.0.0",
    "@types/node": "22.13.1",
    "@types/swagger-ui-express": "4.1.7",
    "eslint": "9.19.0",
    "prettier": "3.4.2",
    "tsx": "4.19.2",
    "typescript": "5.7.3",
    "typescript-eslint": "8.23.0"
  },
  "packageManager": "npm@11.1.0",
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  }
}
